{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm exec turbo build --filter=@pfm/api"
  },
  "deploy": {
    "preDeployCommand": "pnpm exec turbo db:migrate",
    "startCommand": "pnpm exec turbo start --filter=@pfm/api",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
